@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

<#testFacebook>
    sh:targetClass schema:Event, schema:MusicEvent, schema:TheaterEvent ; 
    sh:property [
        sh:message "Only Facebook URLs for events are allowed for Event sameAs." ;
        sh:path schema:sameAs ;
        sh:pattern "^https?://www.facebook.com/events"  ;  
        sh:severity sh:Warning ;
    ] 
.

@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

<#EventName>
    a sh:NodeShape ;
    sh:targetClass schema:Event, schema:MusicEvent, schema:TheaterEvent ;  
    sh:property [
        sh:path schema:name ;
        sh:uniqueLang true ;
        sh:minCount 1 ;
        sh:message "Name is required." ;
        sh:severity sh:Violation ; 
    ]
.




@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

<#EventPlace>
    a sh:NodeShape ;
    sh:targetClass schema:Event, schema:MusicEvent, schema:TheaterEvent ; 
    sh:property [
        sh:path schema:location ;
        sh:minCount 1 ;
        sh:severity sh:Violation ;
    ]
.

@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

<#EventStartDate>
    a sh:NodeShape ;
    sh:targetClass schema:Event, schema:MusicEvent, schema:TheaterEvent ; 
    sh:property [
        sh:path schema:startDate ;
        sh:minCount 1 ;
        sh:severity sh:Violation ; 
        sh:pattern "^[0-9]{4}-[0-9]{2}-[0-9]{2}(T[0-9]{2}:[0-9]{2}(:[0-9]{2}(.[0-9]*)?)?(-[0-9]{2}:[0-9]{2})?)?Z?$" ;
    ]
.



@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

<#PlaceName>
    a sh:NodeShape ;
    sh:targetClass schema:Place ;  
    sh:property [
        sh:path schema:name ;
        sh:uniqueLang true ;
        sh:minCount 1 ;
        sh:message "Place name (one per language) is recommended." ;
        sh:severity sh:Warning ; 
    ]
.



@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

<#postalCode>
    a sh:NodeShape ;
    sh:targetClass schema:PostalAddress ;  
    sh:property [
        sh:path schema:postalCode ;
        sh:minCount 1 ;
        sh:pattern "^[0-9A-Za-z]{3} ?[0-9A-Za-z]{3}$" ;
        sh:severity sh:Warning ; 
    ]
.